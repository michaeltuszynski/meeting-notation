{
  "name": "meeting-intelligence-assistant",
  "version": "1.0.0",
  "description": "Real-time meeting intelligence assistant with <2s latency",
  "main": "electron/main.js",
  "private": true,
  "engines": {
    "node": ">=18.0.0 <=22.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:electron\"",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:electron": "electron .",
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/*.integration.test.js'",
    "test:perf": "jest --testMatch='**/*.perf.test.js'",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "perf:check": "node scripts/latency-check.js",
    "debug:memory": "node --expose-gc --trace-warnings backend/server.js",
    "claude:check": "node scripts/claude-check.js",
    "activate": "source activate.sh"
  },
  "keywords": [
    "electron",
    "transcription",
    "real-time",
    "meeting",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "ioredis": "^5.7.0",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2",
    "p-queue": "^8.1.0",
    "redis": "^4.7.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^10.0.0",
    "wav": "^1.0.2",
    "web-audio-api": "^0.2.2",
    "winston": "^3.17.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "autocannon": "^7.15.0",
    "concurrently": "^8.2.2",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "sinon": "^18.0.1",
    "supertest": "^7.1.4",
    "web-vitals": "^4.2.4"
  }
}
